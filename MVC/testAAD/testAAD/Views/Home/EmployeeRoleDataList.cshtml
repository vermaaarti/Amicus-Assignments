@model List<EmployeeRoleInfo>

@{
    ViewData["Title"] = "Employee_List_Page";
}

<div class="container">
    <h1>User Roles</h1>

    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Employee Email</th>
                    <th>Employee Name</th>
                    <th>Role Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeEmail</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.RoleName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
